      <p id="filter-text">Select your filters</p>

        <div class="filter-div">
          <div class="row mx-auto">
            <div class="card col-md mb-2">
              <%= image_tag "coffee.jpg" %>
              <h2>Coffee</h2>
            </div>

            <div class="card col-md mb-2">
              <%= image_tag "drinks.jpg" %>
              <h2>Drinks</h2>
            </div>

            <div class="card col-md mb-2">
              <%= image_tag "food.png" %>
              <h2>Food</h2>
            </div>

            <div class="card col-md mb-2">
              <%= image_tag "clubs.jpg" %>
              <h2>Clubs</h2>
            </div>

            <div class="card col-md mb-2">
              <%= image_tag "cinema.png" %>
              <h2>Cinemas</h2>
            </div>

            <div class="card col-md mb-2">
              <%= image_tag "parks.jpg" %>
              <h2>Parks</h2>
            </div>

            <%= f.button :submit, "Meet Halfway!", class: "btn btn-primary" %>
          </div>
        </div>

        <div class="button-div text-center">
          <%#= form.submit value: 'Meet Halfway!', class: "btn btn-primary mb-2 rounded"%>
        </div>
      <% end %>
